$(function(){
		
//email	
$("#submit").click(function(e){
	e.preventDefault();
	
	var name = $("#name").val();
	var add = $("#email").val();
	var body = $("#body").val();
	
	$("#sent").html("<img src='../img/spinner.gif' alt='spinner' />" );	
	
	 $.ajax({
      url: 'email.php',
      data: 'action=emailme&name=' + name + '&add=' + add + '&body=' + body,
      dataType: 'json',
      type: 'post',
      success: function (j) {
					if (!j.ok){
						$("#sent").removeClass('hide').addClass('show'); 
					}
					else 
						$("#sent").html(j.msg);
      		}
    });

    
});	
	
	
