var menuRoot = $( "#menu-root" );
var menu = $( "#menu" );
 
// Hook up menu root click event.
menuRoot.attr("href", "javascript:void(0)").click(function(){
	menu.toggle();	// Toggle the menu display.
	menuRoot.blur();// Blur the link to remove focus.
	return(false);	// Cancel event (and its bubbling).
});
 
// Hook up a click handler on the document so that
// we can hide the menu if it is not the target of
// the mouse click.
$(document).click(function(e){
	// Check to see if this came from the menu.
	if (menu.is( ":visible" ) && !$( e.target ).closest( "#menu" ).size()){	
		// The click came outside the menu, so
		// close the menu.
		menu.hide();	 
	}
});

/*******************bottom bar *****************/
 
});//end jquery
 